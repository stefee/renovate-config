{
  "description": "Disables automerge for testing frameworks. Upgrades to testing frameworks need to be validated manually to avoid false positive results.",
  "packageRules": [
    {
      "extends": ["github>renditions/renovate-config:testFrameworks"],
      "automerge": false,
      "groupName": "test dependencies",
      "minor": {
        "automerge": false,
        "groupName": "test dependencies"
      },
      "major": {
        "automerge": false
      },
      "pin": {
        "automerge": false,
        "groupName": "test dependencies"
      },
      "digest": {
        "automerge": false,
        "groupName": "test dependencies"
      }
    }
  ]
}
